@model IEnumerable<string>
@{
    ViewBag.Title = "MenuHorizontal";
}

<h2>MenuHorizontal</h2>

<div class="btn-group btn-group-sm btn-group-justified">
    @Html.ActionLink("Home","List","Product",new { @class = "btn btn-default btn-sm"})

    @foreach(var link in Model)
    {
        @Html.RouteLink(link, 
       new { controller = "Product", action = "List", category = link, page = 1 }, 
       new { @class = "btn btn-default" + (link == ViewBag.SelectedCategory ? " btn-primary" : "")})
    }
</div>

